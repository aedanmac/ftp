<% if current_user.admin == true %>
	<%= form_for @user, url: update_user_path do |f| %>
		    <%= f.label :approved %>
		    <%= f.text_field :approved, class: "form-control"%>
		   
		    <%= f.label :admin %>
		    <%= f.text_field :admin, class: "form-control" %>

		    <%= f.submit "Update User" %>

		    <%= link_to "Delete", all_users_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %>
	<% end %>

<% else %>
	 <%= link_to "Access Not Authorized", incidents_path %>
<% end %>