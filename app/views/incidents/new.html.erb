<%= form_for @incident, url: create_incident_path do |f| %>
	<fieldset>
	<legend>Report an Incident</legend>
	<div id="incident-form" class="large-4 columns text-center">
 	<%= f.label :age %>
		<%= f.text_field :age, class: "form-control"%>
	  
		<%= f.label :gender %>
		<%= f.text_field :gender, class: "form-control" %>

		<%= f.label :raceethnicity %>
		<%= f.text_field :raceethnicity, class: "form-control" %>

		<%= f.label :month %>
		<%= f.text_field :month, class: "form-control" %>

		<%= f.label :day %>
		<%= f.text_field :day, class: "form-control" %>

		<%= f.label :year %>
		<%= f.text_field :year, class: "form-control" %>

		<%= f.label :"Street Address" %>
		<%= f.text_field :streetaddress, class: "form-control" %>

		<%= f.label :city %>
		<%= f.text_field :city, class: "form-control" %>

		<%= f.label :state %>
		<%= f.text_field :state, class: "form-control" %>

		<%= f.label :cause %>
		<%= f.text_field :cause, class: "form-control" %>

		<%= f.label :"Law Enforcement Agency" %>
		<%= f.text_field :lawenforcementagency, class: "form-control" %>

		<%= f.label :armed %>
		<%= f.text_field :armed, class: "form-control" %>
	</div>
	</fieldset>
	<div class="create-incident">
	<%= f.submit "Create Incident" %>
	</div>

<% end %>