<% if current_user.admin == true %>

<%= link_to "Admin Panel", all_users_path %>

<% end %>

<% if current_user.approved == false %>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
    <h1>Awaiting Admin Approval.</h1>
<% end %>


<% if current_user.admin == true || current_user.approved == true %>

 
    <%= link_to "Report New Incident", new_incident_path %>
    
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>


    <% if @incidents.count > 0 %>
        <% @incidents.reverse.each do |incident| %>
            <div class="container" id="roll">
                <div class="panel panel-default">
                    
                    <div class="panel-heading">
                        <h3><%= incident.name %></h3>
                    </div>

                    <div class="panel-body">
                        <p><%= "Age: " "#{incident.age}" %></p>
                        <p><%= "Gender: " "#{incident.gender}" %></p>
                        <p><%= "Race / Ethnicity: " "#{incident.raceethnicity}" %></p>
                        <p><%= "Date: " "#{incident.month}" " " "#{incident.day}" ", " "#{incident.year}"%></p>
                        <p><%= "Location: " "#{incident.streetaddress}" ", " "#{incident.city}" ", " "#{incident.state}" %></p>
                        <p><%= "Cause: " "#{incident.cause}" %></p>
                        <p><%= "Law Enforcement Agency: " "#{incident.lawenforcementagency}" %></p>
                        <p><%= "Armed or Unarmed: " "#{incident.armed}" %></p>

                        <%= link_to "View Incident", incident_path(id: incident.id) %>

                    </div>
                </div>
            </div>

        <%end %>
    <%end %>
<% end %>